{
  "name": "asci-numbers",
  "version": "1.0.0",
  "description": "Convert numbers to ASCI art text.",
  "main": "lib/asciNumbers.js",
  "scripts": {
    "compile": "babel -d lib/ src/",
    "compile:watch": "babel -w -d lib/ src/",
    "coverage": "nyc npm test",
    "coverage:lcov": "nyc npm test && nyc report --reporter=text-lcov > lcov.txt && cat lcov.txt | coveralls",
    "lint": "eslint . --ext js",
    "prepublish": "npm run compile",
    "test": "_mocha --compilers js:babel-core/register",
    "release:patch": "npm test && npm run lint && npm run compile && npm version patch && git push && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/machaj/asci-numbers.git"
  },
  "keywords": [
    "ASCII art"
  ],
  "author": "jan.machy@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/machaj/asci-numbers/issues"
  },
  "homepage": "https://github.com/machaj/asci-numbers#readme",
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-core": "^6.7.0",
    "babel-eslint": "^5.0.0",
    "babel-preset-es2015": "^6.6.0",
    "coveralls": "^2.11.8",
    "eslint": "^2.3.0",
    "eslint-config-airbnb": "^6.1.0",
    "expect": "^1.14.0",
    "mocha": "^2.4.5",
    "nyc": "^6.0.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
